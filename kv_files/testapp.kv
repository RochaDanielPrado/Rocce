<Gerenciador>:
    Janela3:
    Janela2:
    Janela1:
    MainScreen:
    LoginScreen:
    Sair:
        name: 'sair'
    Menu:
        name: 'menu'


<Menu>:
    BoxLayout:
        orientation:'vertical'
        padding:100
        spacing:50
        canvas:
            Color:
                rgba:1,1,1,1
                Rectangle:
                    size:self.size
                    pos:self.pos
                    source:'moldura.png'
        Image:
            source:'images/atencao.png'
            size_hint_y:None
            height:300
            allow_stretch:True
        Button:
            text:'Tarefas'
            #on_release:app.root.current = 'sair'
            #cor:0.1,0.1,0.1,1
        Button:
            text:'Assistente'
        Button:
            text:'Sair'
            on_release: root.confirmacao()

<Sair>:
    BoxLayout:
        orientation:'vertical'
        ActionBar:
            ActionView:
                ActionPrevious:
                    title:'Tarefas'
                    on_release:app.root.current = 'menu'
                ActionButton:
                    text:'Sair'
                    on_release: app.root.current = 'menu'



